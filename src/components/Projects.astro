---
import React from '../icons/React.astro';
import Vite from '../icons/Vite.astro';
import JS from '../icons/JavaScript.astro';
import GitHubIcon from '../icons/GitHub.astro';
import Python from '../icons/Python.astro';

const TAGS = {
    REACT:{
        name:'React',
        class:'bg-white/10 text-white',
        icon: React,
    },
    VITE:{
        name:'Vite',
        class:'bg-white/10 text-white',
        icon: Vite,
    },
    JS:{
        name:'JavaScript',
        class:'bg-white/10 text-white',
        icon: JS,
    },   
    PYTHON:{
        name:'Python',
        class:'bg-white/10 text-white',
        icon: Python,
    },
}

const PROJECT = [
    {
        title:'Follow Card Twitter',
        description: 'Replica de tarjeta de seguir Twitter, creado con Vite/React',
        link: 'https://mrugarte.github.io/React-followCard-tw/',
        github: 'https://github.com/MrUgarte/React-followCard-tw',
        image:'projects/project1.webp',
        tags:[TAGS.REACT, TAGS.VITE],
    },
    {
        title:'Web Catalogo',
        description: 'Web estilo catalogo, responsive, creado con Vite/Vanilla code',
        link: 'https://mrugarte.github.io/WebCatalogo/',
        github: 'https://github.com/MrUgarte/WebCatalogo',
        image:'projects/project2.webp',
        tags:[TAGS.JS, TAGS.VITE],
    },
    {
        title:'Python Projects',
        description: 'Proyectos creados con Python, Web Scraping, data analysis',
        link: 'https://github.com/MrUgarte/Python-Projects-Collection',
        github: 'https://github.com/MrUgarte/Python-Projects-Collection',
        image:'projects/python.webp',
        tags:[TAGS.PYTHON],
    },
]
---

{
    PROJECT.map(({title, description, tags, image, github, link}) => (
        <article class="mb-20">
            <h3 class="text-2xl font-semibold text-green-200 mb-2">{title}</h3>
            <p class="text-white text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flew-row mb-2">
                {tags.map((tag) =>(
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                        
                    </li>
                ))}
                <a  href ={github} class={`flex gap-x-2 rounded-full text-sm bg-white/10 text-white py-1 px-2`} target="_blank"><GitHubIcon class="size-4 md:size-5"></GitHubIcon></a>
            </ul>
            <a href={link} target="_blank" title={title}>
                <img
                
                class="rounded shadow-2xl shadow-white/15" 
                src={image} 
                alt={`Captura de pantalla del proyecto ${image}`} />
            </a>
            
        </article>
    ))
    
}

