---
import React from '../icons/React.astro';
import Vite from '../icons/Vite.astro';

const TAGS = {
    REACT:{
        name:'React',
        class:'bg-white/10 text-white',
        icon: React,
    },
    VITE:{
        name:'Vite',
        class:'bg-white/10 text-white',
        icon: Vite,
    },
}

const PROJECT = [
    {
        title:'Follow Card Twitter',
        description: 'Replica de tarjeta de seguir Twitter, creado con Vite/React',
        link: 'https://mrugarte.github.io/React-followCard-tw/',
        github: 'https://github.com/MrUgarte/React-followCard-tw',
        image:'projects/project1.webp',
        tags:[TAGS.REACT, TAGS.VITE],
    },
]
---

{
    PROJECT.map(({title, description, tags, image, github, link}) => (
        <article>
            <h3 class="text-2xl font-semibold text-green-200 mb-2">{title}</h3>
            <p class="text-white text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flew-row mb-2">
                {tags.map((tag) =>(
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <a href="https://mrugarte.github.io/React-followCard-tw/" target="_blank" title="TwitterCards">
                <img
                
                class="rounded shadow-2xl shadow-white/15" 
                src={image} 
                alt={`Captura de pantalla del proyecto ${image}`} />
            </a>
            
        </article>
    ))
    
}

